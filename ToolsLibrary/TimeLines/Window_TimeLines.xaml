<Window x:Class="DevelopmentTools.Tools.TimeLines.Window_TimeLines"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevelopmentTools.Tools.TimeLines"
        mc:Ignorable="d"
        Title="Window_TimeLines" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        
        <Canvas/>
        <Slider x:Name="sdScale" Orientation="Vertical" HorizontalAlignment="Right" Height="150" Minimum="1" Maximum="30">
            
        </Slider>
        <Canvas x:Name="TimeBar" Grid.Row="1" Background="#3F51B5"/>
    </Grid>
</Window>
