        <Canvas x:Name="InfoBar" Grid.Row="1" ClipToBounds="True">

        </Canvas>
        <Canvas Grid.Row="1" ClipToBounds="True" Background="Transparent">
            <Border Width="100" Height="35" BorderBrush="White" BorderThickness="2" CornerRadius="5" x:Name="current" Cursor="Hand" Uid="today" MouseLeftButtonDown="Border_MouseLeftButtonDown" ToolTip="返回现在">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#AA029396"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter Property="Background" Value="#029396"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{Binding Now,StringFormat=yyyy-MM-dd}" FontSize="11" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                    <TextBlock Text="{Binding Now,StringFormat=HH:mm:ss}" FontSize="11" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                    <Path Grid.RowSpan="2" x:Name="LeftArrow" Visibility="Collapsed"  Data="M 3,16 L 10,23 L 10,9 Z" Fill="White"/>
                    <Path Grid.RowSpan="2" x:Name="RightArrow" Visibility="Collapsed"  Data="M 93,16 L 86,23 L 86,9 Z" Fill="White"/>
                </Grid>
            </Border>
        </Canvas>
        <Canvas x:Name="TimeBar" Grid.Row="2" Background="#2200E0C6" SizeChanged="Canvas_SizeChanged" ClipToBounds="True"/>
    </Grid>
</Window>
