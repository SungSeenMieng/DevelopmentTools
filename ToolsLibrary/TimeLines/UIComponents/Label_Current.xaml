<UserControl x:Name="userControl" x:Class="LifeLines.UIComponents.Label_Current"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LifeLines.UIComponents" Height="35" Width="80">
    <Border Background="#CC293158" CornerRadius="10">
        <Grid>
            <Line X1="40" X2="40" Y1="0" Y2="5" Stroke="White" StrokeThickness="1"/>
            <Line X1="40" X2="40" Y1="30" Y2="35" Stroke="White" StrokeThickness="1"/>
            <TextBlock Foreground="#FFFFFF" Text="{Binding Uid, ElementName=userControl}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>
