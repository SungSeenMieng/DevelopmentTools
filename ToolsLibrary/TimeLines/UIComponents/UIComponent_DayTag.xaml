<UserControl x:Class="LifeLines.UIComponents.UIComponent_DayTag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LifeLines.UIComponents" >
    <Grid Height="35" Width="60">
        <Line X1="30" X2="30" Y1="0" Y2="10" Stroke="White" StrokeThickness="1"/>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Text="{Binding TimeString, ElementName=userControl}"/>
    </Grid>
</UserControl>
